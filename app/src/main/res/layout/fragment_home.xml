<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.appcompat.widget.SearchView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/searchh"
    app:queryHint="Nhap mon an"
    app:iconifiedByDefault="false"
    android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btnsearchfh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Search"
            android:textColor="@color/white"
            android:textSize="10dp" />
    </LinearLayout>

    <TextView
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/tvfh2"
    android:text="Kham pha mon an"
    android:textColor="@color/black"
    android:textSize="20dp"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnmonanall"
                android:src="@drawable/all"
                android:layout_width="80dp"
                android:layout_height="90dp"/>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="All"
                android:textSize="14dp"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnmonanman"
                android:src="@drawable/monanman"
                android:layout_width="80dp"
                android:layout_height="90dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Món ăn mặn"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btntrasua"
                android:src="@drawable/anhtrasua"
                android:layout_width="80dp"
                android:layout_height="90dp"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Đồ uống"
                android:textSize="14dp"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btndochay"
                android:src="@drawable/dochay"
                android:layout_width="80dp"
                android:layout_height="90dp"/>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Đồ chay"
                android:textSize="14dp"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btndoannhanh"
                android:src="@drawable/doannhanh"
                android:layout_width="80dp"
                android:layout_height="90dp"/>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Đồ ăn nhanh"
                android:textSize="14dp"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btndoansan"
                android:src="@drawable/doansang"
                android:layout_width="80dp"
                android:layout_height="90dp"/>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Đồ ăn sáng"
                android:textSize="14dp"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btngan"
                android:src="@drawable/ggmap"
                android:layout_width="80dp"
                android:layout_height="90dp"/>
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Gần tôi"
                android:textSize="14dp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
    </HorizontalScrollView>
<ScrollView
    android:id="@+id/scroolViewfh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</ScrollView>
</LinearLayout>