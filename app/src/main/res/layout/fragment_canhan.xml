<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/gioitinhtcn" />
    <Button
        android:id="@+id/themmonan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm món ăn" />
    <Button
        android:id="@+id/updtaethongtincanhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa thông tin cá nhân" />
    <Button
        android:id="@+id/doimatkhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu" />
    <Button
        android:id="@+id/dangxuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng xuất" />
    <Button
        android:id="@+id/xemthongbao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem thông báo" />
</LinearLayout>