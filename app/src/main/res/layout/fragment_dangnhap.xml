<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textSize="50sp"
        android:gravity="center"/>
    <EditText
        android:hint="User name"
        android:textSize="30sp"
        android:id="@+id/usernamekh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>
    <EditText
        android:hint="Pass word"
        android:textSize="30sp"
        android:id="@+id/passwordkh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword">
        <requestFocus/>
    </EditText>
    <CheckBox
        android:textSize="20sp"
        android:id="@+id/cbShowPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/passwordkh"
        android:layout_below="@id/passwordkh"
        android:text="Hiện mật khẩu"
        />
    <Button
        android:id="@+id/Quenmk"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu"
        android:textSize="14sp"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"/>

    <Button
        android:id="@+id/dangnhap"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textSize="14sp"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"/>
    <Button
        android:id="@+id/quaylai"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Quay lại"
        android:textSize="14sp"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"/>
    <Button
        android:id="@+id/chuacotaikhoan"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Chưa có tài khoản"
        android:textSize="14sp"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"/>
</TableLayout>